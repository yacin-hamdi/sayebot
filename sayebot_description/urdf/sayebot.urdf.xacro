<?xml version="1.0"?>

<robot name="sayebot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find sayebot_description)/urdf/sayebot_gazebo.xacro"/>
    <xacro:include filename="$(find sayebot_description)/urdf/sayebot_ros2_control.xacro"/>

    <link name="base_footprint"/>

    <link name="base_link">
        <inertial>
            <mass value="3.0" />
            <inertia ixx="0.0054" ixy="0.0"     ixz="0.0"
                                    iyy="0.0252" iyz="0.0"
                                                    izz="0.0252" />
            <origin xyz="0.0 0.0 0.038" rpy="0.0 0.0 0.0" />
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://sayebot_description/meshes/BaseReduced.dae"/>
            </geometry>
            <origin xyz="0.1371 0 0" rpy="0 0 ${pi/2}"/>
        </visual>

        <visual>
            <geometry>
                    <mesh filename="package://sayebot_description/meshes/TopReduced.dae"/>
            </geometry>
            <origin xyz="0.1371 0 0" rpy="0 0 ${pi/2}"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.3 0.09 0.12"/>
            </geometry>
            <origin xyz="-0.03 0 0.06" rpy="0 0 0"/>
        </collision>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.0115" rpy="0 0 0"/>
    </joint>

    

    <link name="right_forward_wheel_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://sayebot_description/meshes/Wheel.dae"/>
            </geometry>
            <origin xyz="0 -0.015 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0365" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </collision>
    </link>
    <link name="right_forward_steer_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

        
    </link>

    <joint name="right_forward_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child link="right_forward_steer_link"/>
        <origin xyz="0.11 -0.09 0.0115" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="5" lower="-0.5" upper="0.5" velocity="1.0"/>
    </joint>

    <joint name="right_forward_wheel_joint" type="continuous">
        <parent link="right_forward_steer_link"/>
        <child link="right_forward_wheel_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_backward_wheel_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://sayebot_description/meshes/Wheel.dae"/>
            </geometry>
            <origin xyz="0 -0.015 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0365" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </collision>
    </link>

    <joint name="right_backward_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_backward_wheel_link"/>
        <origin xyz="-0.115 -0.09 0.0115" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_forward_wheel_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://sayebot_description/meshes/Wheel.dae"/>
            </geometry>
            <origin xyz="0 0.015 0" rpy="0 0 ${pi}"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0365" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </collision>
        
    </link>

    <link name="left_forward_steer_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

    
    </link>

    <joint name="left_forward_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child link="left_forward_steer_link"/>
        <origin xyz="0.11 0.09 0.0115" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="5" lower="-0.5" upper="0.5" velocity="1.0"/>
    </joint>

    <joint name="left_forward_wheel_joint" type="continuous">
        <parent link="left_forward_steer_link"/>
        <child link="left_forward_wheel_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>


    <link name="left_backward_wheel_link">
        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.00003331" ixy="0.0"     ixz="0.0"
                                    iyy="0.0000204" iyz="0.0"
                                                    izz="0.0000204" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://sayebot_description/meshes/Wheel.dae"/>
            </geometry>
            <origin xyz="0 0.015 0" rpy="0 0 ${pi}"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0365" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        </collision>
    </link>

    <joint name="left_backward_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_backward_wheel_link"/>
        <origin xyz="-0.115 0.09 0.0115" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

</robot>